generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Prisma Schema

model User {
  id              String    @id @default(cuid())
  username        String    @unique
  password        String
  email           String    @unique
  createdAt       DateTime   @default(now()) 
  favoriteSongId  String?
  playlists       Playlist[]
  likedSongs      Song[]    @relation("LikedSongs")
  favoriteSong    Song?     @relation("FavoriteSong", fields: [favoriteSongId], references: [id], onDelete: Cascade)
  likedArtists    Artist[]  @relation("LikedArtists")
}

model Playlist {
  id       String       @id @default(cuid())
  name     String
  userId   String
  songs    Song[]
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Song {
  id          String       @id @default(cuid())
  title       String
  apiId       String       @unique
  releaseDate DateTime? // Fecha de lanzamiento
  artistName  String       
  photo_song  String
  duration    Int?       // Duración en segundos
  likedBy     User[]     @relation("LikedSongs")
  favoritedBy User[]    @relation("FavoriteSong")
  playlists   Playlist[]
}

model Artist {
  id           String       @id @default(cuid())
  name         String
  apiId        String       @unique
  photo_artist String
  likedBy      User[]       @relation("LikedArtists") // ✅ Relación N:M entre User y Artist
}
